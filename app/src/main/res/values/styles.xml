<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="bold_headline_large">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">32sp</item>
		<item name="android:lineHeight">48sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_medium">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">24sp</item>
		<item name="android:lineHeight">38sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_small">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">18sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_headline_smallest">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.023</item>
	</style>

	<style name="body">
		<item name="android:fontFamily">@font/anonymous_pro_regular</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineHeight">24sp</item>
	</style>

	<style name="body_bold">
		<item name="android:fontFamily">@font/anonymous_pro_bold</item>
		<item name="android:textSize">16sp</item>
		<item name="android:lineHeight">30sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="bold_button">
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
	</style>

	<style name="button">
		<item name="android:background">@drawable/bg_button_primary</item>
		<item name="android:textColor">@color/white</item>
		<item name="textAllCaps">true</item>
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:elevation">6dp</item>
		<item name="elevation">6dp</item>
	</style>

	<style name="button_outline">
		<item name="android:background">@drawable/bg_outline_black</item>
		<item name="android:textColor">@color/black</item>
		<item name="textAllCaps">true</item>
		<item name="android:fontFamily">@font/poppins_bold</item>
		<item name="android:textSize">14sp</item>
		<item name="android:lineHeight">24sp</item>
		<item name="android:letterSpacing">0.02</item>
		<item name="android:elevation">6dp</item>
		<item name="elevation">6dp</item>
	</style>

	<style name="radio_bg">
		<item name="android:layout_marginTop">20dp</item>
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<!--Added different available drawable because coudn't find smiley drawable -->
		<item name="drawableLeftCompat">@drawable/ic_3sc_toolbar</item>
		<item name="android:drawablePadding">10dp</item>
		<item name="android:layoutDirection">rtl</item>
		<item name="drawableTint">@color/black</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:textStyle">bold</item>
	</style>

</resources>